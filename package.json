{
  "name": "auto-bem-mask",
  "description": "Auto Scope CSS using BEM methodology",
  "version": "0.1.9",
  "author": "Alexander Kit <alex.kit@atmajs.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/tenbits/autoBem-mask.git"
  },
  "bugs": {
    "url": "https://github.com/tenbits/autoBem-mask/issues"
  },
  "licenses": [
    "MIT"
  ],
  "main": "lib/auto-bem-mask.js",
  "devDependencies": {
    "app-bundler": "0.0.38",
    "atma": ">0.9.26",
    "atma-io": "^0.2.19",
    "atma-loader-ts": "^1.0.0",
    "auto-bem": "^0.1.13",
    "maskjs": "^0.61.12"
  },
  "scripts": {
    "test": "atma test",
    "build": "app-bundler",
    "watch": "app-bundler --watch",
    "release": "atma release"
  },
  "keywords": [],
  "dependencies": {
    "maskjs": ">=0.61.13"
  },
  "app-bundler": {
    "file": "src/index.ts",
    "outputMain": "lib/auto-bem-mask.js",
    "package": {
      "module": "commonjs",
      "moduleWrapper": "umd",
      "moduleName": "AutoBemMask",
      "commonjs": {
        "output": "simplified"
      }
    },
    "dynamicDependencies": [
      "maskjs"
    ],
    "defaultExtensions": {
      "js": "ts"
    },
    "middlewares": {
      "js": [],
      "ts": [
        "atma-loader-ts:read"
      ]
    }
  },
  "atma": {
    "plugins": [
      "atma-loader-ts"
    ],
    "settings": {
      "include": {
        "amd": true,
        "extentionDefault": {
          "js": "ts"
        }
      },
      "io": {
        "extensions": {}
      },
      "atma-loader-ts": {
        "extensions": [
          "ts",
          "test"
        ],
        "typescript": {
          "compilerOptions": {
            "module": "CommonJS",
            "#if TEST": {
              "module": "AMD"
            },
            "sourceMap": false
          }
        }
      }
    }
  }
}
