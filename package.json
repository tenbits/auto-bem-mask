{
  "name": "auto-bem-mask",
  "description": "Auto Scope CSS using BEM methodology",
  "version": "0.1.9",
  "author": "Alexander Kit <alex.kit@atmajs.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/tenbits/autoBem-mask.git"
  },
  "bugs": {
    "url": "https://github.com/tenbits/autoBem-mask/issues"
  },
  "licenses": [
    "MIT"
  ],
  "main": "lib/autoBem-mask.js",
  "devDependencies": {
    "app-bundler": "0.0.20",
    "atma": ">0.9.26",
    "atma-io": "^0.2.19",
    "atma-loader-babel": "^1.1.29",
    "auto-bem": "^0.1.11",
    "babel-plugin-async-to-promises": "^1.0.5",
    "babel-preset-es2015": "^6.24.0",
    "maskjs": "^0.61.12"
  },
  "scripts": {
    "test": "atma test",
    "build": "app-bundler",
    "watch": "app-bundler --watch",
    "release": "atma release"
  },
  "keywords": [],
  "dependencies": {
    "maskjs": ">=0.61.13"
  },
  "app-bundler": {
    "file": "src/exports.js",
    "outputMain": "lib/auto-bem-mask.js",
    "package": {
      "module": "commonjs",
      "moduleWrapper": "umd",
      "moduleName": "AutoBemMask",
      "commonjs": {
        "output": "simplified"
      }
    },
    "middlewares": {
      "js": [
        "importer:read",
        "atma-loader-babel:read"
      ]
    }
  },
  "atma": {
    "plugins": [
      "atma-loader-babel"
    ],
    "settings": {
      "atma-loader-babel": {
        "extensions": [
          "es6",
          "test"
        ],
        "babel": {
          "presets": [
            "es2015"
          ],
          "plugins": [
            "async-to-promises"
          ]
        }
      }
    }
  }
}
